<% content_for :body_content_title do %>
  <%= @about.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @about.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @about.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="abouts">
      <% @abouts.each do |about| %>
        <li>
          <%= link_to about.title, refinery.abouts_about_path(about) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
