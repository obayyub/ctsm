<% if @abouts.exists? %>

<div ng-switch on='select' ng-init="select = '<%= @abouts.first.title %>'">
	<div class="pure-menu pure-menu-open pure-menu-horizontal">
		<% @abouts.each do |f| %>
			<ul>
				<li ng-click="select = '<%= f.title.to_s %>'"><a href='#'><%= f.title%></a></li>
			</ul>
		<% end %>
	</div>
	<% @abouts.each do |about| %>
	  <div ng-switch-when='<%= about.title.to_s %>'>
	  	<%= about.title %>
	  	<%=raw about.content %>
	  </div>
	<% end %>
</div>
<% end %>