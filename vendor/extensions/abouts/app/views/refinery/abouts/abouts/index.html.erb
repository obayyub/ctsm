<% if @abouts.exists? %>
<div class='row'>
<div class='col-lg-1'></div>
<div class='col-lg-10'>
	<div ng-switch on='select' ng-init="select = '<%= @abouts.first.title %>'">
		<div>
			<% @abouts.each do |f| %>
				<button class='btn btn-default btn-sm' ng-click="select = '<%= f.title.to_s %>'"><%= f.title%></button>
			<% end %>
		</div>
		<% @abouts.each do |about| %>
		  <div ng-switch-when='<%= about.title.to_s %>'>
		  	<h3><%= about.title %></h3>
		  	<%=raw about.content %>
		  </div>
		<% end %>
	</div>
</div>
<div class='col-lg-1'></div>
</div>
<% end %>