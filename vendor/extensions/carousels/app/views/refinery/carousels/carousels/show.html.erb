<% content_for :body_content_title do %>
  <%= @carousel.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @carousel.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @carousel.description %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @carousel.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="carousels">
      <% @carousels.each do |carousel| %>
        <li>
          <%= link_to carousel.title, refinery.carousels_carousel_path(carousel) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
