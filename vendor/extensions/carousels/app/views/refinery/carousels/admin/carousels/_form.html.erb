<%= form_for [refinery, :carousels_admin, @carousel] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @carousel,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @carousel.picture,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.carousels.admin.carousels.carousel'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @carousel.title) -%>
<% end -%>
