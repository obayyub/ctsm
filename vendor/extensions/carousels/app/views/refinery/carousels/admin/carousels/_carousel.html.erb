<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(carousel) -%>">
  <span class='title'>
    <%= carousel.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.carousels_carousel_path(carousel),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_carousels_admin_carousel_path(carousel),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.carousels_admin_carousel_path(carousel),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => carousel.title),
        :method => :delete %>
  </span>
</li>
