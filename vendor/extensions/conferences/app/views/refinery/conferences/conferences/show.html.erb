<% content_for :body_content_title do %>
  <%= @conference.author %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @conference.author %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @conference.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @conference.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="conferences">
      <% @conferences.each do |conference| %>
        <li>
          <%= link_to conference.author, refinery.conferences_conference_path(conference) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
