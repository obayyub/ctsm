<ul>
  <% if ::Refinery::Conferences::Admin::ConferencesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.conferences_admin_conferences_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_conferences_admin_conference_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Conferences::Admin::ConferencesController.sortable? && ::Refinery::Conferences::Conference.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Conferences"),
                 refinery.conferences_admin_conferences_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Conferences"),
                 refinery.conferences_admin_conferences_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
