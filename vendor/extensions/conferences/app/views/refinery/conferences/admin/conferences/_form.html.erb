<%= form_for [refinery, :conferences_admin, @conference] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @conference,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_field :content -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.conferences.admin.conferences.conference'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @conference.author) -%>
<% end -%>
