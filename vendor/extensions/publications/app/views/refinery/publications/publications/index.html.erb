<div class='row' ng-controller='PublicationCtrl'>
	<div class='col-lg-1'>
	</div>
	<div class='col-lg-10' ng-switch on='selection'>
    <button class='btn btn-default btn-sm' ng-click="switchView('journal')">Journals</button>
    <button class='btn btn-default btn-sm' ng-click="switchView('conference')">Conferences</button>
    <button class='btn btn-default btn-sm' ng-click="switchView('textbooks')">Textbooks</button>
    <button class='btn btn-default btn-sm' ng-click="switchView('reports')">Technical Reports</button>
	<div ng-switch-when='journal'>
	<h2>Journal Articles</h2>
  <% @journals.each do |pub| %>
  		<div>
	     	<div><%= image_fu pub.picture, '100x' %></div>
	      <div><%= pub.authors %></div>
	      <div><%= pub.title %></div>
	      <div><%= pub.content %>
	      <% if pub.pdf.present? %>
        	<%= link_to 'PDF', pub.pdf.url %>
      	<% end %></div>
        <hr>
      </div>
  <% end %>
  </div>
	<div ng-switch-when='conference'>
	<h2>Conferences</h2>
  <% @conferences.each do |pub| %>
  		<div>
	     	<div><%= image_fu pub.picture, '100x' %></div>
	      <div><%= pub.authors %></div>
	      <div><%= pub.title %></div>
	      <div><%= pub.content %>
	      <% if pub.pdf.present? %>
        	<%= link_to 'PDF', pub.pdf.url %>
      	<% end %></div>
        <hr>
      </div>
  <% end %>
  </div>
	<div ng-switch-when='textbooks'>
	<h2>Textbooks</h2>
  <% @textbooks.each do |pub| %>
  		<div>
	     	<div><%= image_fu pub.picture, '100x' %></div>
	      <div><%= pub.authors %></div>
	      <div><%= pub.title %></div>
	      <div><%= pub.content %>
	      <% if pub.pdf.present? %>
        	<%= link_to 'PDF', pub.pdf.url %>
      	<% end %></div>
        <hr>
      </div>
  <% end %>
  </div>
	<div ng-switch-when='reports'>
	<h2>Technical Reports</h2>
  <% @reports.each do |pub| %>
  		<div>
	     	<div><%= image_fu pub.picture, '100x' %></div>
	      <div><%= pub.authors %></div>
	      <div><%= pub.title %></div>
	      <div><%= pub.content %>
	      <% if pub.pdf.present? %>
        	<%= link_to 'PDF', pub.pdf.url %>
      	<% end %></div>
        <hr>
      </div>
  <% end %>
  </div>
  </div>
  <div class='col-lg-1'>
  </div>
</div>


