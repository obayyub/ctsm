<% content_for :body_content_title do %>
  <%= @publication.category %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @publication.category %>
    </p>
  </section>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @publication.authors %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @publication.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @publication.content %>
    </p>
  </section>
  <section>
    <h1>Pdf</h1>
    <p>
      <% if @publication.pdf.present? %>
        <%= link_to 'pdf', @publication.pdf.url %>
      <% else %>
        pdf
      <% end %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @publication.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="publications">
      <% @publications.each do |publication| %>
        <li>
          <%= link_to publication.category, refinery.publications_publication_path(publication) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
