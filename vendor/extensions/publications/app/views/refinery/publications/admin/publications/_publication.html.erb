<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(publication) -%>">
  <span class='title'>
    <%= publication.category %> <%= publication.title %>

  </span>
  <span class='actions'>

    <%= link_to refinery_icon_tag("application_go.png"), refinery.publications_publication_path(publication),
        :title => t('.view_live_html'),
        :target => "_blank" %>

    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_publications_admin_publication_path(publication),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.publications_admin_publication_path(publication),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => publication.category),
        :method => :delete %>
  </span>
</li>
