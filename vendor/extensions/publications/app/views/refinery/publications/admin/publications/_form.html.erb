<%= form_for [refinery, :publications_admin, @publication] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @publication,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :category -%>
    <%= f.text_field :category, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :authors -%>
    <%= f.text_field :authors -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_field :content -%>
  </div>

  <div class='field'>
    <%= f.label :pdf -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :pdf_id,
               :resource => @publication.pdf -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @publication.picture,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.publications.admin.publications.publication'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @publication.category) -%>
<% end -%>
