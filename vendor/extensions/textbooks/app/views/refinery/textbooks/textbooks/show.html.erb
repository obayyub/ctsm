<% content_for :body_content_title do %>
  <%= @textbook.authors %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @textbook.authors %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @textbook.title %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @textbook.state %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @textbook.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="textbooks">
      <% @textbooks.each do |textbook| %>
        <li>
          <%= link_to textbook.authors, refinery.textbooks_textbook_path(textbook) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
