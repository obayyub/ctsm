<ul>
  <% if ::Refinery::Textbooks::Admin::TextbooksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.textbooks_admin_textbooks_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_textbooks_admin_textbook_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Textbooks::Admin::TextbooksController.sortable? && ::Refinery::Textbooks::Textbook.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Textbooks"),
                 refinery.textbooks_admin_textbooks_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Textbooks"),
                 refinery.textbooks_admin_textbooks_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
