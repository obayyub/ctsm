<%= form_for [refinery, :textbooks_admin, @textbook] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @textbook,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :authors -%>
    <%= f.text_field :authors, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @textbook.picture,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.textbooks.admin.textbooks.textbook'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @textbook.authors) -%>
<% end -%>
