<% content_for :body_content_title do %>
  <%= @report.authors %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @report.authors %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @report.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @report.content %>
    </p>
  </section>
  <section>
    <h1>Pdf</h1>
    <p>
      <% if @report.pdf.present? %>
        <%= link_to 'pdf', @report.pdf.url %>
      <% else %>
        pdf
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="reports">
      <% @reports.each do |report| %>
        <li>
          <%= link_to report.authors, refinery.reports_report_path(report) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
