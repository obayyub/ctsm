<ul>
  <% if ::Refinery::Reports::Admin::ReportsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.reports_admin_reports_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_reports_admin_report_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Reports::Admin::ReportsController.sortable? && ::Refinery::Reports::Report.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Reports"),
                 refinery.reports_admin_reports_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Reports"),
                 refinery.reports_admin_reports_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
