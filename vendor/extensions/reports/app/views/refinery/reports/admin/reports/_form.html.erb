<%= form_for [refinery, :reports_admin, @report] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @report,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :authors -%>
    <%= f.text_field :authors, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_field :content -%>
  </div>

  <div class='field'>
    <%= f.label :pdf -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :pdf_id,
               :resource => @report.pdf -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.reports.admin.reports.report'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @report.authors) -%>
<% end -%>
