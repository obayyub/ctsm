<% if @projects.exists? %>
<div class='row'>
<div class='col-lg-1'></div>
<div class='col-lg-10'>
	<div ng-switch on='select' ng-init="select = '<%= @projects.first.title %>'">
		<div>
			<% @projects.each do |f| %>
				<button class='btn btn-default btn-sm' ng-click="select = '<%= f.title.to_s %>'"><%= f.title%></button>
			<% end %>
		</div>
		<% @projects.each do |project| %>
		  <div ng-switch-when='<%= project.title.to_s %>'>
		  	<h3><%= project.title %></h3>
		  	<%=raw project.content %>
		  </div>
		<% end %>
	</div>
</div>
<div class='col-lg-1'></div>
</div>
<% end %>