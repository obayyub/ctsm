<div ng-switch on='select' ng-init="select = '<%= @projects.first.title %>'">
	<div class="pure-menu pure-menu-open pure-menu-horizontal">
		<% @projects.each do |f| %>
			<ul>
				<li ng-click="select = '<%= f.title.to_s %>'"><a href='#'><%= f.title%></a></li>
			</ul>
		<% end %>
	</div>
	<% @projects.each do |project| %>
	  <div ng-switch-when='<%= project.title.to_s %>'>
	  	<%= project.title %>
	  	<%=raw project.content %>
	  </div>
	<% end %>
</div>
