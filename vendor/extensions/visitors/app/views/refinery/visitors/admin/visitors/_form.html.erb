<%= form_for [refinery, :visitors_admin, @visitor] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @visitor,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :parking -%>
    <%= f.text_field :parking, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:other],
                :object => "visitors/visitor" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.visitors.admin.visitors.visitor'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @visitor.parking) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
