<% content_for :body_content_title do %>
  <%= @visitor.parking %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Parking</h1>
    <p>
      <%=raw @visitor.parking %>
    </p>
  </section>
  <section>
    <h1>Other</h1>
    <p>
      <%=raw @visitor.other %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="visitors">
      <% @visitors.each do |visitor| %>
        <li>
          <%= link_to visitor.parking, refinery.visitors_visitor_path(visitor) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
