<% content_for :body_content_title do %>
  <%= @course.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @course.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @course.content %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @course.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="courses">
      <% @courses.each do |course| %>
        <li>
          <%= link_to course.title, refinery.courses_course_path(course) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
