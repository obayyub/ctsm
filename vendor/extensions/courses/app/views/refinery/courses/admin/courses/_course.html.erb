<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(course) -%>">
  <span class='title'>
    <%= course.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.courses_course_path(course),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_courses_admin_course_path(course),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.courses_admin_course_path(course),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => course.title),
        :method => :delete %>
  </span>
</li>
