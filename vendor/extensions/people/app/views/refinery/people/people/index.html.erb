    <% @directors.each do |person| %>
      <li>
        <%= person.name %>
      </li>
    <% end %>
    <h1>Associates</h1>
    <% @associates.each do |person| %>
      <li>
        <%= person.name %>
      </li>
    <% end %>
    <h1>Graduates</h1>
    <% @graduates.each do |person| %>
      <li>
        <%= person.name %>
      </li>
    <% end %>
    <h1>Undergraduates</h1>
    <% @undergraduates.each do |person| %>
      <li>
        <%= person.name %>
      </li>
    <% end %>
<% end %>


