<%= form_for [refinery, :journals_admin, @journal] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @journal,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :authors -%>
    <%= f.text_field :authors, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_field :content -%>
  </div>

  <div class='field'>
    <%= f.label :pdf -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :pdf_id,
               :resource => @journal.pdf -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.journals.admin.journals.journal'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @journal.authors) -%>
<% end -%>
