<% content_for :body_content_title do %>
  <%= @journal.authors %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @journal.authors %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @journal.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @journal.content %>
    </p>
  </section>
  <section>
    <h1>Pdf</h1>
    <p>
      <% if @journal.pdf.present? %>
        <%= link_to 'pdf', @journal.pdf.url %>
      <% else %>
        pdf
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="journals">
      <% @journals.each do |journal| %>
        <li>
          <%= link_to journal.authors, refinery.journals_journal_path(journal) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
