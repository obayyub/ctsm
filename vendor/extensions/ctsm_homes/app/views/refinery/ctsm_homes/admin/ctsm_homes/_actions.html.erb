<ul>
  <% if ::Refinery::CtsmHomes::Admin::CtsmHomesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.ctsm_homes_admin_ctsm_homes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_ctsm_homes_admin_ctsm_home_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::CtsmHomes::Admin::CtsmHomesController.sortable? && ::Refinery::CtsmHomes::CtsmHome.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Ctsm Homes"),
                 refinery.ctsm_homes_admin_ctsm_homes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Ctsm Homes"),
                 refinery.ctsm_homes_admin_ctsm_homes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
