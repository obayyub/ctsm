<%= form_for [refinery, :ctsm_homes_admin, @ctsm_home] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @ctsm_home,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @ctsm_home.picture,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.ctsm_homes.admin.ctsm_homes.ctsm_home'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @ctsm_home.title) -%>
<% end -%>
