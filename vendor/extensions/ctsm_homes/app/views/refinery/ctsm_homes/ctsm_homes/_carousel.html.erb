<div id="carousel-example-generic" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @ctsm_homes.each do |c| %>
      <% if c == @ctsm_homes.first %>
        <li data-target="#carousel-example-generic" data-slide-to="c.id" class="active"></li>
      <% else %>
        <li data-target="#carousel-example-generic" data-slide-to="c.id"></li>
      <% end %>
    <% end %>
   </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  <% @ctsm_homes.each do |c| %>
    <% if c == @ctsm_homes.first %>
      <div class="item active">
       <center><%= image_fu c.picture, '600x200' %></center>
        <div class="carousel-caption">
          <%= c.title %>
        </div>
      </div>
    <% else %>
      <div class="item">
        <center><%= image_fu c.picture, '600x200' %></center>
        <div class="carousel-caption">
          <%= c.title %>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>



  <!-- Controls -->
  <a class="left carousel-control ctsm-carousel" style="background-image: none" href="#carousel-example-generic" data-slide="prev">
    <span class="icon-prev ctsm-arrow"></span>
  </a>
  <a class="right carousel-control" style="background-image: none" href="#carousel-example-generic" data-slide="next">
    <span class="icon-next ctsm-arrow"></span>
  </a>
</div>