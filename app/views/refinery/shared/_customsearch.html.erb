<form class="form-inline ctsm-search">
<%= form_tag refinery.search_path do -%>
  <%= text_field_tag :query, {}, {:type => "search",
                     :placeholder => "Search",
                     :class => "form-control",
                     :value => (params[:query] if params[:query])} %>
  <%= submit_tag 'Go', :class => "btn btn-default" %>
<% end %>
</form>